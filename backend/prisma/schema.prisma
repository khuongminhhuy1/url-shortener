generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ShortURL {
  id         String @id @default(uuid()) 
  original   String
  shortCode  String @unique
  clicks     Int    @default(0)
  createdAt  DateTime @default(now())

  @@map("short_urls")
}
